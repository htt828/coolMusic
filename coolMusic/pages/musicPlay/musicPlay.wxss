@import '../../iconfont.wxss';
.lyrics{
  height: 78vh;
  overflow: scroll;
  
}
.lyricItem{
  color: #333;
  font-size: 28rpx;
  line-height: 60rpx;
}
swiper-item,swiper {
  height: 78vh;
}
.activeLyric{
  color: #77acf7;
  font-size: 30rpx;
}
.lyric{
  padding-top: 40rpx;
  font-weight: 600;
}
.backgroundImg{
  width: 100vw;
  height: 100vh !important;
  opacity: 0.2;
}
.musicPlay{
  position: relative;
}
.main{
  text-align: center;
  position: absolute;
  top: 30rpx;
}
.main .preImg{
  width: 100vw;
}
.preImg image{
  border-radius: 50%;
  width: 600rpx !important;
  height: 600rpx !important;
  -moz-box-shadow:2px 2px 13px #666666; -webkit-box-shadow:2px 2px 13px #666666; box-shadow:2px 2px 13px #666666;
  /* 18s动画一个周期执行的时长,linear线性，0s动画延迟时长，infinte动画无限执行 */
  -webkit-animation:run 18s linear 0s infinite;
}

/* 图片自动旋转需要-webkit-animation结合@-webkit-keyframes一起使用 */
/* @-webkit-keyframes中from、to两个属性指动画的初始值和结束值 */
 @-webkit-keyframes run{
from{
-webkit-transform:rotate(0deg);
}
to{
-webkit-transform:rotate(360deg);
}
}
.songInfo{
  font-size: 35rpx;
  margin-bottom: 25rpx;
}
.songMore{
  padding: 0 150rpx;
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
  align-items: center;
  margin-bottom: 40rpx;
}
.comment{
  position: relative;
}
.commentCount{
  position: absolute;
  top: -18rpx;
  font-size: 24rpx;
  left: 38rpx;
  vertical-align: text-top;
  display: inline-block;
}
.icon-pinglun,.icon-shipin,.icon-xihuan1{
  font-size: 52rpx;
  color:#666666;
}
.icon-xihuan{
  color: red;
  font-size: 52rpx;
}
.musicPlayControl{
  display: flex;
  margin-top: 40rpx;
  padding: 0 100rpx;
  align-items: center;
  justify-content: space-around;
  position: relative;
}
.icon-shangyishou,.icon-xiayishou{
  font-size: 75rpx;
}
.icon-zanting,.icon-ziyuan{
  color: black;
  font-weight: 700;
  font-size: 80rpx;
}
.icon-bofang{
  font-size: 80rpx;
  color: black;
  font-weight: 700;
}
.icon-yinleliebiao-,.icon-xunhuan{
  font-size: 50rpx;
  color: black;
}
.icon-xinjian{
  position: absolute;
  right: 40rpx;
  font-size: 52rpx;
  color: black !important;
}

/* 弹框歌曲列表 */
.van-popup--bottom{
  background: #333 !important;
}
.songItem{
  align-items: center;
  display: flex;
  padding: 30rpx;
}
.songItem .left{
  display: flex;
  align-items: center;
  flex: 8;
}
.songItem .name{
  color: white;
}
.songItem .singer{
  color: #ccc;
  font-size: 26rpx;
}
.songItem .iconfont{
  flex: 2;
  text-align: center;
  font-size: 40rpx;
  color: white;
}
.close{
  border-top: 1px solid #999;
  width: 100vw;
  padding: 20rpx;
  text-align: center;
  position: absolute;
  bottom: 0;
  color: white;
}
